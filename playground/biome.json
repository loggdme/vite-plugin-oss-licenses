{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/core", "ultracite/react", "ultracite/remix"],
  "files": { "includes": ["!!src/styles.css"] },
  "formatter": { "lineWidth": 120 },
  "linter": {
    "rules": {
      "style": { "noHeadElement": "off", "noMagicNumbers": "off" },
      "nursery": { "useConsistentArrowReturn": "off" }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [":NODE:", ":BUN:", ":BLANK_LINE:", ":PACKAGE:", ":BLANK_LINE:", ":ALIAS:"]
          }
        }
      }
    }
  }
}
